{
    "manifest_version": 3,
    "author": "Manuel Minniti",
    "name": "Curtain Fall",
    "version": "1.0",
    "description": "Remove annoying content-blocking pop-ups and cookie windows automatically.",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "scripting",
        "tabs",
        "activeTab",
        "windows",
        "system.display",
        "alarms",
        "webRequest",
        "declarativeNetRequest"
    ],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["contentScripts/main.ts"],
            "run_at": "document_start"
        },
        {
            "matches": ["<all_urls>"],
            "js": ["contentScripts/elementSelector.ts"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "service_worker": "background.ts"
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": false
    },
    "action": {
        "default_icon": {
            "16": "assets/icons/icon-16.png",
            "32": "assets/icons/icon-32.png",
            "48": "assets/icons/icon-48.png",
            "128": "assets/icons/icon-128.png"
        },
        "default_title": "Curtain Fall",
        "default_popup": "popup/index.html"
    },
    "icons": {
        "16": "assets/icons/icon-16.png",
        "32": "assets/icons/icon-32.png",
        "48": "assets/icons/icon-48.png",
        "128": "assets/icons/icon-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "popup/index.html",
                "options/index.html",
                "popupEdit/index.html",
                "assets/icons/*"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
